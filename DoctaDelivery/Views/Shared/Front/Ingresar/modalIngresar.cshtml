@model DoctaDelivery.Models.Usuario

<div class="modal fade" tabindex="-1" role="dialog" id="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Ingresar </h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Logeo", "Registrar", FormMethod.Post))
                { 
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="usuario" class="control-label col-sm-2">Usuario: </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.usuario1, new { @class = "form-control", name = "usuario1", placeholder = "usuario", required = "required" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <label for="contrasenia" class="control-label col-sm-2">Contraseña: </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.contrasenia, new { @class = "form-control", name = "constrasenia", placeholder = "Costraseña", required = "required",type="password" })                       
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
